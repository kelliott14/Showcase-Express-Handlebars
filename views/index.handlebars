<div class="container">
<h1>Burger Time</h1>

    <div class="listGroup">
        <h2>On the list:</h2>
    {{#each burgers}}
        {{#unless devoured}}
             
        <div class="card">
            <h5 class="card-title">{{burger_name}}</h5>
            <button class="devourButton" data-id="{{id}}">Devour!</button>
            </div>
            {{/unless}}
        {{/each}}
        </div>
    
    <div class="listGroup">
        <h2>Already done!</h2>
    {{#each burgers}}
        {{#if devoured}}
        <div class="card">
            <h5 class="card-title">{{burger_name}}</h5>
            </div>
            {{/if}}
        {{/each}}
    </div>
</div>
